<div class="container mt-5 mb-5">
    <div class="row height d-flex justify-content-center align-items-center">
        <div class="col-md-7 form_outside">

            <form action="/comment" class="w-100 p-4 comment_form text-light" method="POST">
                <h4 class="comment_header">Your Comment About This Article</h4>
                <textarea name="comment" class="mt-3 mb-3" name="comment" id="comment" cols="44" rows="5"
                    placeholder="You can write your comment here..." required></textarea>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 col-form-label">Email *</label>
                    <div class="col-sm-9">
                        <input name="email" type="email" class="form-control" id="inputEmail3" placeholder="Email">
                    </div>
                </div>

                <input type="text" name="id" value="<%= id %> " class="d-none">
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-3 col-form-label">Name</label>
                    <div class="col-sm-9">
                        <input name="name" type="text" class="form-control" id="inputPassword3"
                            placeholder="Name" required>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col d-flex justify-content-between w-100">
                        <div><small>* optional</small> </div>
                        <button type="submit" class="btn btn-info">Send</button>
                    </div>
                </div>

            </form>



            <div class="card mt-5">
                <div class="p-3 ">
                    <h4 class="">Comments</h4>
                </div>


                <%for (let i = 0; i < comments.length; i++) { %>
                <div class="mt-2">
                    <div class="d-flex flex-row p-3">
                        <div class="w-100">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex flex-row align-items-center"> <span class="mr-2"> <%= comments[i].name %> </span>
                                    <small class="c-badge bg-info">Top
                                        Comment</small> </div> <small><%= date %> </small>
                            </div>
                            <p class="text-justify comment-text mb-0">
                                <%= comments[i].comment %>
                            </p>
                            <div class="d-flex flex-row user-feed"> <span class="wish text-info"><i
                                        class="fa fa-heartbeat mr-2 text-info"></i>24</span> <span class="ml-3"><i
                                        class="fa fa-comments-o mr-2"></i>Reply</span> </div>
                        </div>
                    </div>

                </div>

                <%  } %>
            </div>
        </div>
    </div>
</div>