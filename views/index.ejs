<%- include("./head.ejs") %>

<%- include("./header.ejs") %>

<div class="box-container-main p-3 container">

    <div class="row">
        <div class="col-lg-8 col-md-12 col-sm-12">
            <div class="main">

                <% for (let index = 0; index < articles.length; index++) { %>

                <div class="blog-boxes mb-5">
                    <div class="post-header">
                        <a href="/article/<%= articles[index].id %>"><h2 class="h2-subhead"> <%= articles[index].header %> </h2></a>
                        <ul class="d-flex justify-content-between">
                           
                            <li><a href="" class=" text-dark"><i
                                        class="fas fa-pencil-alt"></i><%= articles[index].category %> </li></a>
                            <li><a href="" class=" text-dark"><i class="far fa-comment-alt"></i> 3 Comments</li></a>
                            <li><a href="" class=" text-dark"><i class="fas fa-calendar-alt"></i>
                                11-12-2020</a></li>
                        </ul>
                    </div>

                    <div class="post-title">
                        <img class="blog-img" style="width: 100%; height: 400px; border-radius: 5px;"
                            src="<%= articles[index].pic %>" alt="">
                        <p class="blog-text pt-3"> <%= articles[index].article %> </p>
                        <span><a class="blog-btn" href="/article/<%= articles[index].id %>">READ MORE</a></span>

                    </div>
                </div>

                <%  } %>

            </div>
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12">

            <div class="blog-boxes mb-5">
                <h5>Top 5 Most Read Articles</h5>
                <ul class="list-group">
                <% for (let i = 0; i < mostReadArticles.length; i++) { %>
                    
                       <a href="/article/<%= mostReadArticles[i].id %>"><li class="list-group-item d-flex justify-content-between align-items-center">
                            <%= mostReadArticles[i].header %> 
                            <span class="badge badge-info badge-pill"><%= mostReadArticles[i].readnumber%> </span>
                        </li></a> 

               <% } %>
            </ul>
              
            </div>

            <div class="blog-boxes mb-5">
                <ul class="list-group">
                    <a href="category/webdevelopment"><h5><%= webDevNumber[0].category %></h5></a>
                    <%for (let i = 0; i < webDevNumber.length; i++) { %>
                   <a href="/article/<%= webDevNumber[i].id %>"><li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= webDevNumber[i].header %>
                        <span class="badge badge-info badge-pill m-2"> <%= webDevNumber[i].readnumber %> </span>
                    </li> </a> 

                    <% } %>
                </ul>

            </div>

            <div class="blog-boxes mb-5">
                <ul class="list-group">
                    <a href="category/design"><h5><%= designNumber[0].category %></h5></a>
                    <%for (let i = 0; i < designNumber.length; i++) { %>
                   <a href="/article/<%= designNumber[i].id %>"><li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= designNumber[i].header %>
                        <span class="badge badge-info badge-pill m-2"> <%= designNumber[i].readnumber %> </span>
                    </li> </a> 

                    <% } %>
                </ul>

            </div>

            <div class="blog-boxes mb-5">
                <ul class="list-group">
                    <a href="category/journey"><h5><%= journeyNumber[0].category %></h5></a>
                    <%for (let i = 0; i < journeyNumber.length; i++) { %>
                   <a href="/article/<%= journeyNumber[i].id %>"><li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= journeyNumber[i].header %>
                        <span class="badge badge-info badge-pill m-2"> <%= journeyNumber[i].readnumber %> </span>
                    </li> </a> 

                    <% } %>
                </ul>

            </div>


            <div class="blog-boxes mb-5">
                <a href="/photogallery"><h5>Photo Gallery</h5></a>
                <div class="row photos">

                  <% for (let i = 0; i < 8; i++) { %>
                    <div class="col-lg-6">
                        <img src="./img/photogallery/photo<%=i%>.jpg"  alt="">
                    </div>
                    
                  <% } %>  
                        
                  
              
                     

                    
                </div>
            </div>
        </div>
    </div>



</div>

<%- include("./footer.ejs") %> 


</body>

</html>